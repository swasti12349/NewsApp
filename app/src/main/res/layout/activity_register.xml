<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_200"
    tools:context=".Register">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="Sign Up"
                android:textSize="@android:dimen/app_icon_size"
                android:textColor="@color/purple_500"/>

            <EditText
                android:id="@+id/fullName"
                android:layout_width="370dp"
                android:drawableLeft="@drawable/name"
                android:layout_height="50dp"
                android:drawablePadding="12dp"
                android:background="@drawable/edittextbackground"
                android:inputType="text"
                android:textColorHint="#050507"
                android:padding="10dp"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="35dp"
                android:layout_marginTop="210dp"
                android:hint="Full Name"/>
            <EditText
                android:layout_width="370dp"
                android:layout_height="50dp"
                android:drawableLeft="@drawable/email"
                android:background="@drawable/edittextbackground"
                android:drawablePadding="5dp"
                android:id="@+id/email"
                android:inputType="textEmailAddress"
                android:layout_marginTop="10dp"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="35dp"
                android:padding="15dp"
                android:textColorHint="#030107"
                android:hint=" Email"
                android:autofillHints="Email"
                android:layout_below="@+id/fullName"/>
            <EditText
                android:layout_width="370dp"
                android:layout_height="50dp"
                android:drawableLeft="@drawable/phone"
                android:id="@+id/mobile"
                android:textColorHint="#06030C"
                android:background="@drawable/edittextbackground"
                android:layout_marginTop="10dp"
                android:drawablePadding="5dp"
                android:padding="15dp"
                android:hint=" Mobile"
                android:layout_below="@+id/email"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="35dp"/>
            <EditText
                android:layout_width="370dp"
                android:layout_height="50dp"
                android:hint=" Password"
                android:drawableLeft="@drawable/password"
                android:textColorHint="#06040C"
                android:padding="15dp"
                android:layout_below="@+id/mobile"
                android:background="@drawable/edittextbackground"
                android:inputType="textPassword"
                android:drawablePadding="5dp"
                android:layout_marginTop="10dp"
                android:id="@+id/password"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="35dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_margin="30dp"
                android:background="#00000000"
                android:elevation="14dp"
                android:textColorHint="#F0ECFB"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#F2F0F4"
                android:id="@+id/register"
                android:text="register"
                android:layout_below="@+id/password"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"/>

            <ProgressBar
                android:id="@+id/pb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:elevation="30dp"
                android:layout_below="@+id/already"
                android:layout_marginTop="-239dp"
                android:visibility="invisible"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already Register? Login Here"
                android:id="@+id/already"
                android:textSize="16sp"
                android:textColor="@android:color/primary_text_dark"
                android:layout_below="@+id/register"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
